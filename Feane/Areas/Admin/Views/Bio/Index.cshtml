@model Bio

<hr class="my-5" />

<!-- Bordered Table -->
<div class="card">
    <div class="card-header" style="display:flex;justify-content:space-between">
        <h2>
            Bio
        </h2>

    </div>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>HeaderLogo</th>
                        <th>FooterLocation</th>
                        <th>FooterEmail</th>
                        <th>FooterPhone</th>
                        <th>Started</th>
                        <th>Ended</th>
                        <th style="text-align:right">Action</th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>@Model.HeaderLogoName</td>
                        <td>@Model.FooterLocation</td>
                        <td>@Model.FooterEmail</td>
                        <td>@Model.FooterPhone</td>
                        <td>@Model.Started.ToShortTimeString()</td>
                        <td>@Model.Ended.ToShortTimeString()</td>

                        <td>
                            <div style="display:flex;justify-content:flex-end">
                                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-info text-white" style="margin-right:10px">Update</a>
                            </div>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>
<!--/ Bordered Table -->

<hr class="my-5" />