@model SocialMedia

<hr class="my-5" />

<!-- Bordered Table -->
<div class="card">
    <div class="card-header" style="display:flex;justify-content:space-between">
        <h2>
            Social Media
        </h2>

    </div>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>LinkedinLink</th>
                        <th>FacebookLink</th>
                        <th>InstagramLink</th>
                        <th>TvitterLink</th>
                        <th style="text-align:right">Action</th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>@Model.LinkedinLink</td>
                        <td>@Model.FacebookLink</td>
                        <td>@Model.InstagramLink</td>
                        <td>@Model.TvitterLink</td>

                        <td>
                            <div style="display:flex;justify-content:flex-end">
                                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-info text-white" style="margin-right:10px">Update</a>
                            </div>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>
<!--/ Bordered Table -->

<hr class="my-5" />