@model About

<hr class="my-5" />

<!-- Bordered Table -->
<div class="card">
    <div class="card-header" style="display:flex;justify-content:space-between">
        <h2>
            About
        </h2>
        
    </div>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th style="text-align:right">Action</th>
                    </tr>
                </thead>
                <tbody>
                    
                        <tr>
                            <td>
                                <img style="height:115px;width:180px; object-fit:cover;" src="~/images/about/@Model.Image">
                            </td>
                            <td>@Model.Title</td>
                            
                            <td>
                                <div style="display:flex;justify-content:flex-end">
                                   <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-info text-white" style="margin-right:10px">Update</a>
                                </div>
                            </td>
                        </tr>
                  
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--/ Bordered Table -->

<hr class="my-5" />