@model List<Booking>

<hr class="my-5" />

<!-- Bordered Table -->
<div class="card">
    <div class="card-header" style="display:flex;justify-content:space-between">
        <h2>
            Sliders
        </h2>
        <div>
            <a asp-action="Create" class="btn btn-primary text-white" style="margin-right:10px">Create</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>FullName</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>How many Person</th>
                        <th>Day</th>
                        <th>Time</th>
                        <th>Created</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Booking item in Model)
                    {
                        <tr>
                            <td>@item.FullName</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Email</td>
                            <td>
                                @if (item.IsTwoPerson)
                                {
                                    <span style="padding:6px 4px;background-color:green;color:white;">Two Person</span>
                                }
                                else
                                {
                                    <span style="padding:6px 4px;background-color:red;color:white;">Two More Persons</span>
                                }
                            </td>
                           <td>@item.Day.ToShortDateString()</td>
                           <td>@item.Time.ToShortTimeString()</td>
                           <td>@item.CreatedTime</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="pagnation my-2">
                    <ul style="list-style:none;display:flex;justify-content:center;">
                        <li class="page-item prev">
                            <a class="page-link" asp-route-page="page">
                                <i class="tf-icon bx bx-chevrons-left"></i>
                            </a>
                        </li>
                        @for (int i = 1; i <= ViewBag.PageCount; i++)
                        {
                            <li class="page-item  @(i == ViewBag.CurrentPage ? "active" : "")"><a class="page-link" asp-action="Index" asp-route-page="@i">@i</a></li>
                        }
                        <li class="page-item next">
                            <a class="page-link" asp-route-page="@ViewBag.PageCount">
                                <i class="tf-icon bx bx-chevrons-right"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ Bordered Table -->

<hr class="my-5" />